<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_leave_request"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.geeconsystems.globalhr.UI.CreateLeaveRequest">
    <include
        android:id="@+id/t"
        layout="@layout/toolbar"/>

    <LinearLayout
        android:id="@+id/lhb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#d3d3d3"
        android:layout_below="@+id/t"
        >

        <Button
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:layout_marginTop="5dp"
            android:background="#ffffff"
            android:textAlignment="center"
            android:text="Add Detail"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="25sp"
            android:fontFamily="serif"
            android:textColor="#000000"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/lhb"
        android:layout_height="wrap_content">


        <Spinner
            android:layout_marginTop="10dp"
            android:id="@+id/leaveType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:dropDownWidth="wrap_content"
            android:spinnerMode="dropdown"
            android:backgroundTint="#ff7f00"

            />
        <EditText
            android:id="@+id/leavestatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="LeaveStatus"
            android:drawableStart="@drawable/leavestatus"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/lhrb"
            android:layout_marginTop="10dp"
            >

            <Spinner
                android:id="@+id/startdate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#ff7f00"
                android:spinnerMode="dropdown"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                />
            <Spinner
                android:id="@+id/enddate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:spinnerMode="dropdown"
                android:backgroundTint="#ff7f00"
                android:layout_marginEnd="5dp"
                />


        </LinearLayout>



        <EditText
            android:id="@+id/leavereason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/leavereason"
            android:hint="Leave Reason"
            />

        <EditText
            android:id="@+id/dbperiod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/dbperiod"
            android:hint="Difference Between Period"
            />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lv"
        android:id="@+id/lh"
        >

        <RadioButton
            android:id="@+id/rb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Half Day"
            />

        <Button
            android:id="@+id/save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="save"
            android:textColor="#ffffff"
            android:background="#1a1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            />
        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="cancel"
            android:textColor="#ffffff"
            android:background="#9e9e9e"
            android:layout_marginEnd="5dp"
            />


    </LinearLayout>



</RelativeLayout>
