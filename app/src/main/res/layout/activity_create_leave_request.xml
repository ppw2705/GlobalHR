<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_leave_request"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.geeconsystems.globalhr.UI.CreateLeaveRequest">
    <include
        android:id="@+id/t"
        layout="@layout/toolbar"/>



    <LinearLayout
        android:id="@+id/lhb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#d3d3d3"
        android:layout_below="@+id/t"
        >

        <View
            android:id="@+id/li"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:layout_marginTop="5dp"
            android:background="#ff7f00"

            />
        <Button
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="1dp"
            android:background="#ffffff"
            android:text="Add Detail"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="25sp"
            android:fontFamily="serif"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_gravity="center"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/lhb"
        android:background="#d3d3d3"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:background="@drawable/spinnershape"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/leavetypewhite"
                android:background="@drawable/leftcurvespinner"
                android:padding="5dp"
                />
            <Spinner
                android:id="@+id/leaveType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:dropDownWidth="wrap_content"
                android:spinnerMode="dialog"
                android:backgroundTint="#ff7f00"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:background="@drawable/saldetailstextviewl"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/status"
                android:background="@drawable/leftcurvespinner"
                android:padding="5dp"
                />
            <EditText
                android:id="@+id/leavestatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Leave Status"
                android:padding="5dp"
                android:background="@drawable/saldetailstextviewr"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/lhrb"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/spinnershape"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/datew"
                    android:background="@drawable/leftcurvespinner"
                    android:padding="6dp"
                    />
                <Spinner
                    android:id="@+id/startdate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#ff7f00"
                    android:spinnerMode="dialog"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/spinnershape"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/datew"
                    android:background="@drawable/leftcurvespinner"
                    android:padding="6dp"
                    />
                <Spinner
                    android:id="@+id/enddate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:spinnerMode="dialog"
                    android:backgroundTint="#ff7f00"
                    />


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/reasonw"
                android:background="@drawable/leftcurvespinner"
                android:padding="5dp"
                />
            <EditText
                android:id="@+id/leavereason"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Leave Reason"
                android:padding="5dp"
                android:background="@drawable/saldetailstextviewr"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/diffw"
                android:background="@drawable/leftcurvespinner"
                android:padding="5dp"
                />
            <EditText
                android:id="@+id/dbperiod"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Difference Between Period"
                android:padding="5dp"
                android:background="@drawable/saldetailstextviewr"
                />

        </LinearLayout>





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#d3d3d3"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_below="@+id/lv"
        android:id="@+id/lh"
        android:paddingTop="15dp"
        >

        <RadioButton
            android:id="@+id/rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="Half Day"
            android:paddingEnd="10dp"
            android:paddingStart="0dp"
            />

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save Changes"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:background="#1a1"
            android:layout_marginEnd="5dp"
            />
        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="#9e9e9e"
            />


    </LinearLayout>



</RelativeLayout>
