<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#d3d3d3"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/lltable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:paddingTop="5dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >
        <LinearLayout
            android:id="@+id/detailleft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:layout_weight="2"
            android:paddingEnd="5dp"
            android:paddingBottom="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginEnd="10dp"
                >
                <TextView
                    android:id="@+id/tsitemid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ts item ID"
                    android:layout_marginStart="1dp"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:layout_marginEnd="20dp"
                    android:textAlignment="viewStart"
                    android:textSize="10sp"
                    />
                <TextView
                    android:id="@+id/tsid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ts ID"
                    android:textColor="#000000"
                    android:textAlignment="viewStart"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="44"
                    android:background="#d3d3d3"
                    android:layout_weight="1"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:layout_margin="2dp"
                    />
                <TextView
                    android:id="@+id/tsid44"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="44"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:background="#d3d3d3"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:textSize="13sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tsdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ts Date"
                    android:layout_weight="1"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:layout_margin="2dp"
                    />
                <TextView
                    android:id="@+id/dateints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015-05-15"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:background="#d3d3d3"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:textSize="13sp"
                    />

            </LinearLayout>

        </LinearLayout>
        <View
            android:id="@+id/detailline"
            android:layout_width="2dp"
            android:background="#a0a0a0"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            />
        <LinearLayout
            android:id="@+id/detailright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="100dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:id="@+id/tsproject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ts Project"
                        android:textSize="13sp"
                        android:textColor="#a0a0a0"
                        />
                    <TextView
                        android:id="@+id/ghrcvt2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GlobalHr created via Timesheet"
                        android:textColor="#000000"
                        android:textAlignment="viewStart"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:textSize="11sp"
                        />

                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/deletewhite"
                    android:background="#fe5a01"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="20dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="100dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:id="@+id/tsactivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ts Activity"
                        android:textSize="13sp"
                        android:textColor="#a0a0a0"
                        />
                    <TextView
                        android:id="@+id/ghrcvt2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GlobalHr created via Timesheet"
                        android:textColor="#000000"
                        android:textAlignment="viewStart"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:textSize="11sp"
                        />

                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/editwhite"
                    android:background="#44c101"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="20dp"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>