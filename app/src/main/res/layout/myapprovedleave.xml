<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e9e9">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rl0">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/rl1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="#ff7e00"
                android:text=" CASUAL LEAVE  APPLIED ON:2015-06-25"
                android:padding="3dp"
                android:textColor="#ffffff"
                android:id="@+id/tv1"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/rl1"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="START DATE/END DATE"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="#aaaaaa"
                android:id="@+id/tv2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015-07-01/2015-09-30"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp"
                android:layout_below="@id/tv2"
                android:layout_marginBottom="5dp"/>
            <View
                android:layout_height="40dp"
                android:layout_width="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="169dp"
                android:background="#e9e9e9"
                android:id="@+id/v"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="175dp"
                android:text="LEAVE APPLIED"
                android:textColor="#aaaaaa"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.00"
                android:layout_marginLeft="210dp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@id/tv2"/>
            <View
                android:layout_height="40dp"
                android:layout_width="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="279dp"
                android:background="#e9e9e9"
                android:id="@+id/v2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="290dp"
                android:text="HALF DAY"
                android:textColor="#aaaaaa"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginLeft="320dp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@id/tv2"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>