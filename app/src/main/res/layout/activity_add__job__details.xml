<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add__job__details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.geeconsystems.globalhr.UI.Add_Job_Details">

    <include
        android:id="@+id/t"
        layout="@layout/toolbar"/>

    <LinearLayout
        android:id="@+id/lhb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#d3d3d3"
        android:layout_below="@+id/t"
        >

        <Button
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:layout_marginTop="5dp"
            android:background="#ffffff"
            android:text="Add Detail"
            android:textColor="#000000"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/lhb"
        >
        <ScrollView
            android:id="@+id/sv1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/lhs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <Spinner
                    android:layout_marginTop="10dp"
                    android:id="@+id/employee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:dropDownWidth="wrap_content"
                    android:spinnerMode="dropdown"
                    android:backgroundTint="#ff7f00"

                    />
                <Spinner
                    android:layout_marginTop="10dp"
                    android:id="@+id/employeegrosssalary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:dropDownWidth="wrap_content"
                    android:spinnerMode="dropdown"
                    android:backgroundTint="#ff7f00"

                    />
                <Spinner
                    android:layout_marginTop="10dp"
                    android:id="@+id/employementtype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:dropDownWidth="wrap_content"
                    android:spinnerMode="dropdown"
                    android:backgroundTint="#ff7f00"

                    />
                <Spinner
                    android:layout_marginTop="10dp"
                    android:id="@+id/employementcategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:dropDownWidth="wrap_content"
                    android:spinnerMode="dropdown"
                    android:backgroundTint="#ff7f00"

                    />
                <Spinner
                    android:layout_marginTop="10dp"
                    android:id="@+id/employementstatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:dropDownWidth="wrap_content"
                    android:spinnerMode="dropdown"
                    android:backgroundTint="#ff7f00"

                    />
                <Spinner
                    android:layout_marginTop="10dp"
                    android:id="@+id/jobtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:dropDownWidth="wrap_content"
                    android:spinnerMode="dropdown"
                    android:backgroundTint="#ff7f00"

                    />
                <Spinner
                    android:layout_marginTop="10dp"
                    android:id="@+id/jobcategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:dropDownWidth="wrap_content"
                    android:spinnerMode="dropdown"
                    android:backgroundTint="#ff7f00"

                    />
                <Spinner
                    android:layout_marginTop="10dp"
                    android:id="@+id/department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:dropDownWidth="wrap_content"
                    android:spinnerMode="dropdown"
                    android:backgroundTint="#ff7f00"

                    />

                <Spinner
                    android:layout_marginTop="10dp"
                    android:id="@+id/holidaygroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:dropDownWidth="wrap_content"
                    android:spinnerMode="dropdown"
                    android:backgroundTint="#ff7f00"

                    />
                <Spinner
                    android:layout_marginTop="10dp"
                    android:id="@+id/dateofjoinning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:dropDownWidth="wrap_content"
                    android:spinnerMode="dropdown"
                    android:backgroundTint="#ff7f00"

                    />
                <Spinner
                    android:layout_marginTop="10dp"
                    android:id="@+id/terminationreason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:dropDownWidth="wrap_content"
                    android:spinnerMode="dropdown"
                    android:backgroundTint="#ff7f00"

                    />
                <Spinner
                    android:layout_marginTop="10dp"
                    android:id="@+id/terminationdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:dropDownWidth="wrap_content"
                    android:spinnerMode="dropdown"
                    android:backgroundTint="#ff7f00"

                    />
                <Spinner
                    android:layout_marginTop="10dp"
                    android:id="@+id/confirmationdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:dropDownWidth="wrap_content"
                    android:spinnerMode="dropdown"
                    android:backgroundTint="#ff7f00"

                    />
                <Spinner
                    android:layout_marginTop="10dp"
                    android:id="@+id/lastapprasialdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:dropDownWidth="wrap_content"
                    android:spinnerMode="dropdown"
                    android:backgroundTint="#ff7f00"

                    />
                <Spinner
                    android:layout_marginTop="10dp"
                    android:id="@+id/resignedon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:dropDownWidth="wrap_content"
                    android:spinnerMode="dropdown"
                    android:backgroundTint="#ff7f00"

                    />
                <Spinner
                    android:layout_marginTop="10dp"
                    android:id="@+id/resignationacceptedon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:dropDownWidth="wrap_content"
                    android:spinnerMode="dropdown"
                    android:backgroundTint="#ff7f00"
                    />
                <LinearLayout
                    android:id="@+id/llv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    >

                    <Button
                        android:id="@+id/save"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="save"
                        android:textColor="#ffffff"
                        android:background="#1a1"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        />
                    <Button
                        android:id="@+id/cancel"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="cancel"
                        android:textColor="#ffffff"
                        android:background="#9e9e9e"
                        android:layout_marginEnd="5dp"
                        />


                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>



</RelativeLayout>
