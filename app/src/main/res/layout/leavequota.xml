<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:id="@+id/leavelayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ff7f00"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="JOHN DAVE"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAlignment="viewStart"
        />
    <TextView
        android:id="@+id/leave"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="CASUAL LEAVE"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAlignment="viewEnd"

        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/leavelayout"
        android:background="@color/white"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:paddingTop="10dp"
            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/sdanded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:text="START DATE/END DATE"
                android:textStyle="bold"
                android:paddingBottom="10dp"
                android:textColor="#808080"
                />
            <TextView
                android:id="@+id/sdanded1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="8/11/1995-5/6/1996"
                android:textColor="#000000"
                />

        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#b0b0b0"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:paddingTop="10dp"
            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/allocateddays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:textStyle="bold"
                android:textAlignment="center"
                android:paddingBottom="10dp"
                android:text="ALLOCATED DAYS"
                android:textColor="#808080"
                />
            <TextView
                android:id="@+id/allocateddays1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="3.00"
                android:textColor="#000000"
                />
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#b0b0b0"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:paddingTop="10dp"
            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/taken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:textStyle="bold"
                android:text="TAKEN"
                android:paddingBottom="10dp"

                android:textColor="#808080"
                />
            <TextView
                android:id="@+id/taken1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="3.00"
                android:textColor="#000000"
                />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            android:background="#b0b0b0"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:paddingTop="10dp"
            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingBottom="10dp"
                android:textStyle="bold"
                android:text="BALANCE"
                android:textColor="#808080"
                />
            <TextView
                android:id="@+id/balance1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="0.00"
                android:textColor="#000000"
                />

        </LinearLayout>



    </LinearLayout>


</RelativeLayout>