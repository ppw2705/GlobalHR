<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_attendance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.geeconsystems.globalhr.UI.Attendance">
        <android.support.v4.widget.DrawerLayout
            android:id="@+id/drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            tools:openDrawer="start"
            >

            <include
                android:id="@+id/t1"
                layout="@layout/toolbar"/>

            <android.support.design.widget.NavigationView
                android:id="@+id/nav_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:layout_gravity="start"
                app:headerLayout="@layout/nav_header_layout"
                app:menu="@menu/drawer_menu"
                />

            <LinearLayout
                android:id="@+id/lv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_below="@+id/t1">

                <LinearLayout
                    android:id="@+id/lh1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="50dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/img1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="55dp"
                        >

                        <ImageView
                            android:id="@+id/pioimg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/punio"
                            android:background="#ff7f00"
                            android:padding="20dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="10dp"
                            />

                        <TextView
                            android:id="@+id/pio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="177dp"
                            android:background="#ff9f41"
                            android:layout_marginEnd="8dp"
                            android:text="@string/pio"
                            android:textSize="16sp"
                            android:textColor="#ffffff"
                            android:textAlignment="center"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/img2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="55dp"
                        >

                        <ImageView
                            android:id="@+id/arimg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/mar"
                            android:padding="20dp"
                            android:background="#ff7f00"
                            android:layout_marginBottom="10dp"
                            />

                        <TextView
                            android:id="@+id/ar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="177dp"
                            android:background="#ff9f41"
                            android:text="@string/MAR"
                            android:textSize="16sp"
                            android:textColor="#ffffff"
                            android:textAlignment="center"
                            />


                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lh2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="70dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/img3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:layout_marginBottom="30dp"
                        android:layout_marginStart="5dp"
                        >

                        <ImageView
                            android:id="@+id/aregimg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/attendanceemployee"
                            android:padding="15dp"
                            android:layout_marginEnd="8dp"
                            android:background="#ff7f00"
                            android:layout_marginBottom="10dp"
                            />

                        <TextView
                            android:id="@+id/areg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="190dp"
                            android:layout_marginEnd="8dp"
                            android:background="#ff9f41"
                            android:textSize="16sp"
                            android:text="@string/AR"
                            android:textColor="#ffffff"
                            android:textAlignment="center"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/img4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="30dp"
                        >

                        <ImageView
                            android:id="@+id/aeimg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/attendanceregister"
                            android:padding="15dp"
                            android:layout_marginStart="6dp"
                            android:layout_marginBottom="10dp"
                            android:background="#ff7f00"
                            />

                        <TextView
                            android:id="@+id/ae"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#ff9f41"
                            android:textSize="16sp"
                            android:layout_marginStart="6dp"
                            android:layout_marginTop="190dp"
                            android:text="@string/AE"
                            android:textColor="#ffffff"
                            android:textAlignment="center"
                            />


                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>
        </android.support.v4.widget.DrawerLayout>

    </RelativeLayout>

