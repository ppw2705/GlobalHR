<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mei"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d3d3d3"
    tools:context="com.geeconsystems.globalhr.UI.mei">


    <include
        android:id="@+id/tulbar"
        layout="@layout/toolbar"/>


    <View
        android:id="@+id/orline"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/tulbar"
        android:layout_marginTop="5dp"
        android:background="#ff7f00"
        />

    <View
        android:id="@+id/whiteline"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/orline"
        android:background="#ffffff"
        android:layout_marginBottom="2dp"
        />
<ScrollView
    android:id="@+id/sc1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/whiteline"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <TextView
            android:id="@+id/label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Personal Details"
            android:textSize="18sp"
            android:background="#ff7f00"
            android:textColor="@color/white"
            android:textAlignment="inherit"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            />

        <TextView
            android:id="@+id/label2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_below="@+id/r1"
            android:background="#ff7f00"
            android:text=" Job Detail"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:padding="10dp"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/r2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_below="@+id/label2"
            android:layout_marginEnd="5dp"
            />


        <Button
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textSize="16sp"
            android:fontFamily="serif"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="#1a1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:layout_below="@+id/r2"
            android:layout_marginEnd="5dp"
            />







    </RelativeLayout>
</ScrollView>

</RelativeLayout>
