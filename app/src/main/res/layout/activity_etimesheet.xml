<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_etimesheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.geeconsystems.globalhr.UI.Etimesheet">
    <include
        android:id="@+id/one"
        layout="@layout/toolbar"/>

    <LinearLayout
        android:id="@+id/llv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/one">

        <Spinner
            android:layout_marginTop="10dp"
            android:id="@+id/timesheet2015"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:backgroundTint="#ff7f00"
            android:dropDownWidth="wrap_content"
            android:spinnerMode="dropdown"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/lhrb"
            android:layout_marginTop="10dp"
            >

            <Spinner
                android:id="@+id/startdate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#ff7f00"
                android:spinnerMode="dropdown"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                />
            <Spinner
                android:id="@+id/enddate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:spinnerMode="dropdown"
                android:backgroundTint="#ff7f00"
                android:layout_marginEnd="5dp"
                />


        </LinearLayout>

        <Button
            android:id="@+id/req4approval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:text="Request for Approval"
            android:textAlignment="textStart"
            android:drawableStart="@drawable/check"
            />


        <Button
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff7e00"
            android:textColor="#ffffff"
            android:text="Detail"
            />

        <LinearLayout
            android:id="@+id/lhtble"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                >


                <TableRow>
                    <TextView
                        android:text="Ts item ID"
                        android:layout_marginEnd="15dp"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:text="Ts ID"
                        android:textColor="#000000"
                        android:textSize="15sp"


                        />



                </TableRow>

                <TableRow>
                    <TextView
                        android:text="44"
                        android:textAlignment="center"
                        android:layout_marginEnd="15dp"
                        android:background="#d3d3d3"
                        />

                    <TextView
                        android:text="44"
                        android:textAlignment="center"
                        android:background="#d3d3d3"
                        />



                </TableRow>

                <TableRow
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:text="Ts Date"
                        android:textColor="#000000"
                        android:textSize="15sp"

                        />
                </TableRow>
                <TableRow
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"

                    >
                    <TextView
                        android:text="2015-05-15"
                        android:textAlignment="center"
                        android:background="#d3d3d3"
                        android:layout_gravity="center"
                        />
                </TableRow>
            </TableLayout>


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1">

                <TableRow>
                    <TextView
                        android:textSize="15sp"
                        android:text="TS Project"
                        />

                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Global HR Created via Timesheet"
                        android:layout_marginEnd="30dp"
                        android:textColor="#000000"
                        />
                    <ImageView
                        android:src="@drawable/delete"
                        />


                </TableRow>
                <TableRow>
                    <TextView
                        android:textSize="15sp"
                        android:text="TS Activity"
                        />

                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Global HR Created via Timesheet"
                        android:layout_marginEnd="30dp"
                        android:textColor="#000000"
                        />
                    <ImageView
                        android:src="@drawable/edit"
                        />


                </TableRow>

            </TableLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/llhbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/save"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="save changes"
                android:textColor="#ffffff"
                android:background="#1a1"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                />
            <Button
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="cancel"
                android:textColor="#ffffff"
                android:background="#9e9e9e"
                android:layout_marginEnd="5dp"
                />

            <Button
                android:id="@+id/request"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Request"
                android:textColor="#ffffff"
                android:background="#2897ff"
                android:layout_marginEnd="5dp"
                />


        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
