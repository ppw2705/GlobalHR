<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_etimesheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d3d3d3"
    tools:context="com.geeconsystems.globalhr.UI.Etimesheet">
    <include
        android:id="@+id/one"
        layout="@layout/toolbar"/>
    
    <View
        android:id="@+id/li1"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/one"
        android:layout_marginTop="10dp"
        android:background="#ff7f00"
        />

    <LinearLayout
        android:id="@+id/llv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/li1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:background="@drawable/spinnershape"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/timesheetperiod"
                android:background="@drawable/leftcurvespinner"
                android:padding="5dp"
                />
            <Spinner
                android:layout_marginTop="0dp"
                android:id="@+id/timesheet2015"
                android:layout_width="match_parent"
                android:backgroundTint="#ff7f00"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:dropDownWidth="match_parent"
                android:spinnerMode="dialog"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/lhrb"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/spinnershape"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/datew"
                    android:background="@drawable/leftcurvespinner"
                    android:padding="5dp"
                    />
                <Spinner
                    android:id="@+id/startdate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="#ff7f00"
                    android:dropDownWidth="match_parent"
                    android:spinnerMode="dialog"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/spinnershape"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/datew"
                    android:background="@drawable/leftcurvespinner"
                    android:padding="5dp"
                    />
                <Spinner
                    android:id="@+id/enddate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:dropDownWidth="match_parent"
                    android:spinnerMode="dialog"
                    android:backgroundTint="#ff7f00"
                    android:layout_marginEnd="5dp"
                    />

            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:background="@drawable/saldetailstextviewl"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/status"
                android:background="@drawable/leftcurvespinner"
                android:padding="5dp"
                />
            <Button
                android:id="@+id/req4approval"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/saldetailstextviewr"
                android:paddingStart="5dp"
                android:textAlignment="textStart"
                android:text="Request for Approval"

                />

        </LinearLayout>

        <TextView
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff7e00"
            android:textColor="#ffffff"
            android:text="Detail"
            android:textSize="16sp"
            android:textAlignment="center"
            android:padding="5dp"
            />

        <LinearLayout
            android:id="@+id/lhtble"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                >


                <TableRow>
                    <TextView
                        android:text="Ts item ID"
                        android:layout_marginEnd="15dp"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:text="Ts ID"
                        android:textColor="#000000"
                        android:textSize="15sp"


                        />



                </TableRow>

                <TableRow>
                    <TextView
                        android:text="44"
                        android:textAlignment="center"
                        android:layout_marginEnd="15dp"
                        android:background="#d3d3d3"
                        />

                    <TextView
                        android:text="44"
                        android:textAlignment="center"
                        android:background="#d3d3d3"
                        />



                </TableRow>

                <TableRow
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:text="Ts Date"
                        android:textColor="#000000"
                        android:textSize="15sp"

                        />
                </TableRow>
                <TableRow
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"

                    >
                    <TextView
                        android:text="2015-05-15"
                        android:textAlignment="center"
                        android:background="#d3d3d3"
                        android:layout_gravity="center"
                        />
                </TableRow>
            </TableLayout>


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1">

                <TableRow>
                    <TextView
                        android:textSize="15sp"
                        android:text="TS Project"
                        />

                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Global HR Created via Timesheet"
                        android:layout_marginEnd="30dp"
                        android:textColor="#000000"
                        />
                    <ImageView
                        android:src="@drawable/delete"
                        />


                </TableRow>
                <TableRow>
                    <TextView
                        android:textSize="15sp"
                        android:text="TS Activity"
                        />

                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Global HR Created via Timesheet"
                        android:layout_marginEnd="30dp"
                        android:textColor="#000000"
                        />
                    <ImageView
                        android:src="@drawable/edit"
                        />


                </TableRow>

            </TableLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/llhbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/save"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="save changes"
                android:textColor="#ffffff"
                android:background="#1a1"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                />
            <Button
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="cancel"
                android:textColor="#ffffff"
                android:background="#9e9e9e"
                android:layout_marginEnd="5dp"
                />

            <Button
                android:id="@+id/request"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Request"
                android:textColor="#ffffff"
                android:background="#2897ff"
                android:layout_marginEnd="5dp"
                />


        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
