<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_salary_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.geeconsystems.globalhr.UI.Add_salary_details">
    <include
        android:id="@+id/t2"
        layout="@layout/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />


    <LinearLayout
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/t2"
        android:layout_marginTop="10dp"
        >

        <Spinner
            android:layout_marginTop="10dp"
            android:id="@+id/empname"
            android:backgroundTint="#ff7e00"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:dropDownWidth="wrap_content"
            android:spinnerMode="dropdown"
            />

        <Spinner
            android:layout_marginTop="10dp"
            android:id="@+id/empgrade"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:dropDownWidth="wrap_content"
            android:spinnerMode="dropdown"

            />
        <Spinner
            android:layout_marginTop="10dp"
            android:id="@+id/empgradelevel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:dropDownWidth="wrap_content"
            android:spinnerMode="dropdown"

            />
        <Spinner
            android:layout_marginTop="10dp"
            android:id="@+id/currency"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:dropDownWidth="wrap_content"
            android:spinnerMode="dropdown"

            />

        <Spinner
            android:layout_marginTop="10dp"
            android:id="@+id/payfrequency"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:dropDownWidth="wrap_content"
            android:spinnerMode="dropdown"

            />
        <Spinner
            android:layout_marginTop="10dp"
            android:id="@+id/salarycomponent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:dropDownWidth="wrap_content"
            android:spinnerMode="dropdown"

            />
        <EditText
            android:id="@+id/componentvalue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Component Value"
            android:drawableStart="@drawable/comv"
            />

        <EditText
            android:id="@+id/comments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Comments"
            android:drawableStart="@drawable/comments"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lv"
        android:id="@+id/lh"
        android:layout_marginTop="10dp"
        >

        <Button
            android:id="@+id/save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="save"
            android:textColor="#ffffff"
            android:background="#1a1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            />
        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="cancel"
            android:textColor="#ffffff"
            android:background="#9e9e9e"
            android:layout_marginEnd="5dp"
            />


    </LinearLayout>




</RelativeLayout>
