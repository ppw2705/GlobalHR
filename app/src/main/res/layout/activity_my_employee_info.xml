<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_employee_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.geeconsystems.globalhr.UI.My_employee_info">
    <include
        android:id="@+id/t"
        layout="@layout/toolbar"/>



    <RelativeLayout
        android:id="@+id/lhb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#d3d3d3"
        android:layout_below="@+id/t"
        >

        <Button
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="105dp"
            android:layout_marginEnd="100dp"
            android:background="#ffffff"
            android:text=" Edit Detail "
            android:layout_below="@+id/btn1"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center"
            />
        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="105dp"
            android:layout_marginEnd="100dp"
            android:background="#ff7f00"
            android:layout_gravity="center"
            />




    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#d3d3d3"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/lhb"
        >
        <ScrollView
            android:id="@+id/sv1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/lhs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:background="@drawable/spinnershape"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/id"
                        android:background="@drawable/leftcurvespinner"
                        android:padding="3dp"
                        />
                    <Spinner
                        android:id="@+id/employee"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:dropDownWidth="wrap_content"
                        android:spinnerMode="dialog"
                        android:backgroundTint="#ff7f00"

                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:background="@drawable/saldetailstextviewl"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/emplyee"
                        android:background="@drawable/leftcurvespinner"
                        android:padding="3dp"
                        />
                    <EditText
                        android:id="@+id/firstname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="First Name"
                        android:padding="5dp"
                        android:background="@drawable/saldetailstextviewr"
                        android:layout_weight="1"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:background="@drawable/saldetailstextviewl"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/emplyee"
                        android:background="@drawable/leftcurvespinner"
                        android:padding="3dp"
                        />
                    <EditText
                        android:id="@+id/MiddleName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Middle Name"
                        android:padding="5dp"
                        android:background="@drawable/saldetailstextviewr"
                        android:layout_weight="1"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:background="@drawable/saldetailstextviewl"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/emplyee"
                        android:background="@drawable/leftcurvespinner"
                        android:padding="3dp"
                        />
                    <EditText
                        android:id="@+id/lastname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Last Name"
                        android:padding="5dp"
                        android:background="@drawable/saldetailstextviewr"
                        android:layout_weight="1"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:background="@drawable/saldetailstextviewl"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/phone"
                        android:background="@drawable/leftcurvespinner"
                        android:padding="3dp"
                        />
                    <EditText
                        android:id="@+id/phoneno"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Phone Number"
                        android:inputType="phone"
                        android:padding="5dp"
                        android:background="@drawable/saldetailstextviewr"
                        android:layout_weight="1"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:background="@drawable/saldetailstextviewl"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/email"
                        android:background="@drawable/leftcurvespinner"
                        android:padding="3dp"
                        />
                    <EditText
                        android:id="@+id/Email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textEmailAddress"
                        android:hint="Email Address"
                        android:padding="5dp"
                        android:background="@drawable/saldetailstextviewr"
                        android:layout_weight="1"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/lhrb"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/spinnershape"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/birthdate"
                            android:background="@drawable/leftcurvespinner"
                            android:padding="3dp"
                            />
                        <EditText
                            android:id="@+id/bdate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="none"
                            android:hint="birth date"
                            android:clickable="true"
                            android:focusable="false"
                            android:background="@drawable/saldetailstextviewr"
                            android:paddingStart="15dp"

                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/spinnershape"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/gender"
                            android:background="@drawable/leftcurvespinner"
                            android:padding="3dp"
                            />
                        <Spinner
                            android:id="@+id/gender"
                            android:spinnerMode="dialog"
                            android:backgroundTint="#ff7f00"
                            android:dropDownWidth="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            />


                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/lhrb"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/spinnershape"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/marritalstatus"
                            android:background="@drawable/leftcurvespinner"
                            android:padding="3dp"
                            />
                        <Spinner
                            android:id="@+id/maritialstatus"
                            android:spinnerMode="dialog"
                            android:backgroundTint="#ff7f00"
                            android:dropDownWidth="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/spinnershape"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/cast"
                            android:background="@drawable/leftcurvespinner"
                            android:padding="3dp"
                            />
                        <Spinner
                            android:id="@+id/Caste"
                            android:spinnerMode="dialog"
                            android:backgroundTint="#ff7f00"
                            android:dropDownWidth="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            />


                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/lhrb"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/spinnershape"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/race"
                            android:background="@drawable/leftcurvespinner"
                            android:padding="3dp"
                            />
                        <Spinner
                            android:id="@+id/nationality"
                            android:spinnerMode="dialog"
                            android:backgroundTint="#ff7f00"
                            android:dropDownWidth="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/spinnershape"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/bloodgroup"
                            android:background="@drawable/leftcurvespinner"
                            android:padding="3dp"
                            />
                        <Spinner
                            android:id="@+id/bloodgroup"
                            android:spinnerMode="dialog"
                            android:backgroundTint="#ff7f00"
                            android:dropDownWidth="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:background="@drawable/saldetailstextviewl"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/panno"
                        android:background="@drawable/leftcurvespinner"
                        android:padding="3dp"
                        />
                    <EditText
                        android:id="@+id/Panno"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Pan Number"
                        android:inputType="number"
                        android:padding="5dp"
                        android:background="@drawable/saldetailstextviewr"
                        android:layout_weight="1"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:background="@drawable/saldetailstextviewl"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/drivinglicense"
                        android:background="@drawable/leftcurvespinner"
                        android:padding="3dp"
                        />
                    <EditText
                        android:id="@+id/Drivinglicense"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Driving License Number"
                        android:padding="5dp"
                        android:background="@drawable/saldetailstextviewr"
                        android:layout_weight="1"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:background="@drawable/saldetailstextviewl"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/datew"
                        android:background="@drawable/leftcurvespinner"
                        android:padding="3dp"
                        />
                    <EditText
                        android:id="@+id/LicenseExpiryDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="License Expiry Date"
                        android:padding="5dp"
                        android:background="@drawable/saldetailstextviewr"
                        android:layout_weight="1"
                        />

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/llv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    >

                    <Button
                        android:id="@+id/save"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="save"
                        android:textSize="20sp"
                        android:fontFamily="serif"
                        android:textColor="#ffffff"
                        android:background="#1a1"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        />
                    <Button
                        android:id="@+id/cancel"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="cancel"
                        android:textSize="20sp"
                        android:fontFamily="serif"
                        android:textColor="#ffffff"
                        android:background="#9e9e9e"
                        android:layout_marginEnd="5dp"
                        />


                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>


</RelativeLayout>
