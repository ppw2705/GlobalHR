<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_employee_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.geeconsystems.globalhr.UI.My_employee_info">
    <include
        android:id="@+id/t"
        layout="@layout/toolbar"/>



    <RelativeLayout
        android:id="@+id/lhb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#d3d3d3"
        android:layout_below="@+id/t"
        >

        <Button
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="105dp"
            android:layout_marginEnd="100dp"
            android:background="#ffffff"
            android:text=" Edit Detail "
            android:layout_below="@+id/btn1"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center"
            />
        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="105dp"
            android:layout_marginEnd="100dp"
            android:background="#ff7f00"
            android:layout_gravity="center"
            />




    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/lhb"
        >
        <ScrollView
            android:id="@+id/sv1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/lhs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:padding="0dp"
                        android:background="#ff7f00"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="2dp"
                        android:src="@drawable/id"
                        />

                    <Spinner
                        android:layout_marginTop="10dp"
                        android:id="@+id/employeename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:dropDownWidth="wrap_content"
                        android:spinnerMode="dropdown"
                        android:layout_weight="1"
                        />

                </LinearLayout>
                <EditText
                    android:id="@+id/firstname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Nagendra"
                    android:textColorHint="#000000"
                    android:drawableStart="@drawable/emplyee"
                    />

                <EditText
                    android:id="@+id/middlename"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="kanhiayalal"
                    android:textColorHint="#000000"
                    android:drawableStart="@drawable/emplyee"
                    />
                <EditText
                    android:id="@+id/lastname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Mishra"
                    android:textColorHint="#000000"
                    android:drawableStart="@drawable/emplyee"
                    />

                <EditText
                    android:id="@+id/call"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:hint="8286824995"
                    android:textColorHint="#000000"
                    android:drawableStart="@drawable/call"
                    />
                <EditText
                    android:id="@+id/mail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textEmailAddress"
                    android:hint="nagendra.mishra@geeconsystems.com"
                    android:textColorHint="#000000"
                    android:drawableStart="@drawable/mail"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/lhs1"
                    android:layout_marginTop="10dp"
                    >

                    <Spinner
                        android:id="@+id/birthdate"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="#ff7f00"
                        android:spinnerMode="dropdown"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        />
                    <Spinner
                        android:id="@+id/gender"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:spinnerMode="dropdown"
                        android:backgroundTint="#ff7f00"
                        android:layout_marginEnd="5dp"
                        />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/lhs2"
                    android:layout_marginTop="10dp"
                    >

                    <Spinner
                        android:id="@+id/relationshipstatus"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="#ff7f00"
                        android:spinnerMode="dropdown"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        />
                    <Spinner
                        android:id="@+id/general"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:spinnerMode="dropdown"
                        android:backgroundTint="#ff7f00"
                        android:layout_marginEnd="5dp"
                        />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/lhs3"
                    android:layout_marginTop="10dp"
                    >

                    <Spinner
                        android:id="@+id/nationality"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="#ff7f00"
                        android:spinnerMode="dropdown"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        />
                    <Spinner
                        android:id="@+id/bloodgroup"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:spinnerMode="dropdown"
                        android:backgroundTint="#ff7f00"
                        android:layout_marginEnd="5dp"
                        />


                </LinearLayout>

                <EditText
                    android:id="@+id/pannumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="numberSigned"
                    android:hint="(pannumber)"
                    android:textColorHint="#000000"
                    android:drawableStart="@drawable/pan"
                    />

                <EditText
                    android:id="@+id/dln"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:hint="driving license number"
                    android:textColorHint="#000000"
                    android:drawableStart="@drawable/driving"
                    />
                <EditText
                    android:id="@+id/licenseExpirydate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textEmailAddress"
                    android:hint="license Expiry Date"
                    android:textColorHint="#000000"
                    android:drawableStart="@drawable/date"
                    />



                <LinearLayout
                    android:id="@+id/llv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    >

                    <Button
                        android:id="@+id/save"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="save"
                        android:textColor="#ffffff"
                        android:background="#1a1"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        />
                    <Button
                        android:id="@+id/cancel"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="cancel"
                        android:textColor="#ffffff"
                        android:background="#9e9e9e"
                        android:layout_marginEnd="5dp"
                        />


                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>


</RelativeLayout>
