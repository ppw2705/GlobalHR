<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_timesheet"
    android:layout_width="match_parent"
    android:background="#d3d3d3"
    android:layout_height="match_parent"
    tools:context="com.geeconsystems.globalhr.UI.EditTimesheet">
    <include
        android:id="@+id/t2"
        layout="@layout/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ff7f00"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/t2"

        />
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#ffffff"
        android:layout_below="@+id/line1"

        />
    <LinearLayout
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/line2"
        android:layout_marginTop="6dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:background="@drawable/spinnershape"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/timesheetperiod"
            android:background="@drawable/leftcurvespinner"
            android:padding="3dp"
            />

        <Spinner
            android:id="@+id/timesheetperiod"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:backgroundTint="#ff7f00"
            android:spinnerMode="dialog"

            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:background="@drawable/saldetailstextviewl"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/timesheetproject"
                android:background="@drawable/leftcurvespinner"
                android:padding="3dp"
                />
            <EditText
                android:id="@+id/TestProject"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Test Project"
                android:background="@drawable/saldetailstextviewr"
                android:paddingStart="15dp"
                android:textColorHint="@color/black"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:background="@drawable/saldetailstextviewl"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/activity"
                android:background="@drawable/leftcurvespinner"
                android:padding="5dp"
                />
            <EditText
                android:id="@+id/testActivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Test Activity"
                android:background="@drawable/saldetailstextviewr"
                android:paddingStart="15dp"
                android:textColorHint="@color/black"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:background="@drawable/saldetailstextviewl"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/datew"
                android:background="@drawable/leftcurvespinner"
                android:padding="3dp"
                />
            <EditText
                android:id="@+id/Date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="none"
                android:hint="20-7-2016"
                android:clickable="true"
                android:focusable="false"
                android:background="@drawable/saldetailstextviewr"
                android:paddingStart="15dp"
                android:textColorHint="@color/black"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:background="@drawable/saldetailstextviewl"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/datew"
                android:background="@drawable/leftcurvespinner"
                android:padding="3dp"
                />
            <EditText
                android:id="@+id/days"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="7days"
                android:background="@drawable/saldetailstextviewr"
                android:paddingStart="15dp"
                android:textColorHint="@color/black"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:background="@drawable/saldetailstextviewl"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/comments"
                android:background="@drawable/leftcurvespinner"
                android:padding="3dp"
                />
            <EditText
                android:id="@+id/comments"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="No"
                android:background="@drawable/saldetailstextviewr"
                android:paddingStart="15dp"
                android:textColorHint="@color/black"

                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lv"
        android:id="@+id/lh"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        >

        <Button
            android:id="@+id/save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Save"
            android:fontFamily="serif"
            android:textColor="#ffffff"
            android:background="#1a1"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textAllCaps="false"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            />
        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Cancel"
            android:textSize="22sp"
            android:fontFamily="serif"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:background="#9e9e9e"
            android:layout_marginEnd="5dp"
            />


    </LinearLayout>
</RelativeLayout>
