<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add__employee__reporting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d3d3d3"
    tools:context="com.geeconsystems.globalhr.UI.Add_Employee_Reporting">

    <include
        android:id="@+id/t2"
        layout="@layout/toolbar"/>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ff7f00"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/t2"

        />
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#ffffff"
        android:layout_below="@+id/line1"

        />

    <LinearLayout
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/line2"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:background="@drawable/spinnershape"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/emplyee"
                android:background="@drawable/leftcurvespinner"
                android:padding="5dp"
                />
            <Spinner
                android:layout_marginTop="0dp"
                android:id="@+id/empname"
                android:layout_width="match_parent"
                android:backgroundTint="#ff7f00"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:dropDownWidth="match_parent"
                android:spinnerMode="dialog"
                />

        </LinearLayout>
  <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:background="@drawable/spinnershape"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/manger"
                android:background="@drawable/leftcurvespinner"
                android:padding="5dp"
                />
            <Spinner
                android:layout_marginTop="0dp"
                android:id="@+id/manager"
                android:layout_width="match_parent"
                android:backgroundTint="#ff7f00"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:dropDownWidth="match_parent"
                android:spinnerMode="dialog"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:background="@drawable/spinnershape"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/manger"
                android:background="@drawable/leftcurvespinner"
                android:padding="5dp"
                />
            <Spinner
                android:layout_marginTop="0dp"
                android:id="@+id/managertype"
                android:layout_width="match_parent"
                android:backgroundTint="#ff7f00"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:dropDownWidth="match_parent"
                android:spinnerMode="dialog"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:background="@drawable/spinnershape"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/reportingmode"
                android:background="@drawable/leftcurvespinner"
                android:padding="5dp"
                />
            <Spinner
                android:layout_marginTop="0dp"
                android:id="@+id/reportingmode"
                android:layout_width="match_parent"
                android:backgroundTint="#ff7f00"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:dropDownWidth="match_parent"
                android:spinnerMode="dialog"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lv"
        android:id="@+id/lh"
        android:layout_marginTop="5dp"
        >

        <Button
            android:id="@+id/save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="save"
            android:textColor="#ffffff"
            android:background="#1a1"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textAllCaps="false"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            />
        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="cancel"
            android:textSize="22sp"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:background="#9e9e9e"
            android:layout_marginEnd="5dp"
            />


    </LinearLayout>








</RelativeLayout>
